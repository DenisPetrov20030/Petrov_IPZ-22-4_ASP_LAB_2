using Microsoft.AspNetCore.Mvc;
using HospitalSystem.Models;
using Microsoft.AspNetCore.Authorization;

namespace HospitalSystem.Controllers
{
    [Authorize(Roles = "Doctor,Admin")]
    public class DoctorsController : Controller
    {
        private IHospitalRepository repository;

        public DoctorsController(IHospitalRepository repo)
        {
            repository = repo;
        }

        [AllowAnonymous]
        // GET: /Doctors/
        public IActionResult Index()
        {
            var doctors = repository.Doctors.OrderBy(d => d.FullName).ToList();
            return View(doctors);
        }

        [AllowAnonymous]
        // GET: /Doctors/Details/5
        public IActionResult Details(long id)
        {
            var doctor = repository.GetDoctorById(id);
            if (doctor == null)
            {
                return NotFound();
            }
            return View(doctor);
        }

        // GET: /Doctors/Create
        public IActionResult Create()
        {
            return View(new Doctor());
        }

        // POST: /Doctors/Create
        [HttpPost]
        public IActionResult Create(Doctor doctor)
        {
            if (ModelState.IsValid)
            {
                repository.CreateDoctor(doctor);
                TempData["Success"] = "Лікаря успішно додано!";
                return RedirectToAction("Index");
            }
            return View(doctor);
        }

        // GET: /Doctors/Edit/5
        public IActionResult Edit(long id)
        {
            var doctor = repository.GetDoctorById(id);
            if (doctor == null)
            {
                return NotFound();
            }
            return View(doctor);
        }

        // POST: /Doctors/Edit/5
        [HttpPost]
        public IActionResult Edit(Doctor doctor)
        {
            if (ModelState.IsValid)
            {
                repository.UpdateDoctor(doctor);
                TempData["Success"] = "Дані лікаря оновлено!";
                return RedirectToAction("Index");
            }
            return View(doctor);
        }

        // GET: /Doctors/Delete/5
        public IActionResult Delete(long id)
        {
            var doctor = repository.GetDoctorById(id);
            if (doctor == null)
            {
                return NotFound();
            }
            return View(doctor);
        }

        // POST: /Doctors/Delete/5
        [HttpPost, ActionName("Delete")]
        public IActionResult DeleteConfirmed(long id)
        {
            var doctor = repository.GetDoctorById(id);
            if (doctor != null)
            {
                repository.DeleteDoctor(doctor);
                TempData["Success"] = "Лікаря видалено!";
            }
            return RedirectToAction("Index");
        }
    }
}
