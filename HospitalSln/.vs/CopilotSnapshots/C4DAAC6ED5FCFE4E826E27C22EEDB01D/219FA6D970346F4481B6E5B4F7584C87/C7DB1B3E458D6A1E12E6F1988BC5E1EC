@model HospitalSystem.Models.Appointment

<div class="container py-4">
	@if (TempData["Message"] != null)
	{
		<div class="alert alert-info alert-dismissible fade show" role="alert">
			<i class="bi bi-info-circle"></i> @TempData["Message"]
			<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		</div>
	}

	@if (ViewBag.HasDraft == true)
	{
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			<i class="bi bi-exclamation-triangle"></i>
			<strong>Знайдено збережену чернетку!</strong> Дані автоматично відновлено. Продовжуйте заповнення або очистіть форму.
			<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		</div>
	}

	<div class="card shadow-sm">
		<div class="card-header bg-primary text-white">
			<h4><i class="bi bi-plus-circle"></i> Новий запис</h4>
		</div>
		<div class="card-body">
			<form method="post" action="/Appointments/Create">
				<div class="mb-3">
					<label class="form-label">Ім'я пацієнта</label>
					<input type="text" name="PatientName" class="form-control" value="@Model.PatientName" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Ім'я лікаря</label>
					<input type="text" name="DoctorName" class="form-control" value="@Model.DoctorName" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Дата і час</label>
					<input type="datetime-local" name="AppointmentDate" class="form-control" 
						   value="@(Model.AppointmentDate != default(DateTime) ? Model.AppointmentDate.ToString("yyyy-MM-ddTHH:mm") : "")" 
						   required>
				</div>

				<div class="mb-3">
					<label class="form-label">Відділення</label>
					<input type="text" name="Department" class="form-control" value="@Model.Department" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Примітки</label>
					<textarea name="Notes" class="form-control" rows="3">@Model.Notes</textarea>
				</div>

				<div class="d-flex justify-content-between flex-wrap gap-2">
					<div>
						<button type="submit" name="action" value="Create" class="btn btn-success">
							<i class="bi bi-check-circle"></i> Створити
						</button>
						<button type="submit" name="action" value="SaveDraft" class="btn btn-warning">
							<i class="bi bi-save"></i> Зберегти чернетку
						</button>
					</div>
					<div>
						@if (ViewBag.HasDraft == true)
						{
							<button type="submit" name="action" value="ClearDraft" class="btn btn-outline-danger">
								<i class="bi bi-trash"></i> Очистити чернетку
							</button>
						}
						<a href="/Appointments" class="btn btn-outline-secondary">
							<i class="bi bi-x-circle"></i> Скасувати
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>

	<!-- Інформаційний блок -->
	<div class="alert alert-info mt-4">
		<i class="bi bi-lightbulb"></i>
		<strong>Підказка:</strong> Ви можете зберегти чернетку запису та продовжити заповнення пізніше. 
		Дані зберігаються протягом 30 хвилин.
	</div>
</div>
