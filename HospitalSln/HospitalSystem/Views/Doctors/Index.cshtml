@model IEnumerable<HospitalSystem.Data.Models.Doctor>

<div class="container py-4">
	@if (TempData["Success"] != null)
	{
		<div class="alert alert-success alert-dismissible fade show" role="alert">
			<i class="bi bi-check-circle"></i> @TempData["Success"]
			<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
		</div>
	}

	<div class="d-flex justify-content-between align-items-center mb-4">
		<h2><i class="bi bi-people"></i> Лікарі</h2>
		<a href="/Doctors/Create" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i> Додати лікаря
		</a>
	</div>

	@if (Model.Any())
	{
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead class="table-dark">
					<tr>
						<th>ID</th>
						<th>Повне ім'я</th>
						<th>Спеціалізація</th>
						<th>Відділення</th>
						<th>Телефон</th>
						<th>Email</th>
						<th>Записів</th>
						<th>Дії</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var doctor in Model)
					{
						<tr>
							<td>@doctor.DoctorID</td>
							<td>@doctor.FullName</td>
							<td>@doctor.Specialization</td>
							<td>@doctor.Department</td>
							<td>@doctor.PhoneNumber</td>
							<td>@doctor.Email</td>
							<td>
								<span class="badge bg-info">@doctor.Appointments.Count</span>
							</td>
							<td>
								<div class="btn-group" role="group">
									<a href="/Doctors/Details/@doctor.DoctorID" class="btn btn-sm btn-info">
										<i class="bi bi-eye"></i> Деталі
									</a>
									<a href="/Doctors/Edit/@doctor.DoctorID" class="btn btn-sm btn-warning">
										<i class="bi bi-pencil"></i> Редагувати
									</a>
									<a href="/Doctors/Delete/@doctor.DoctorID" class="btn btn-sm btn-danger">
										<i class="bi bi-trash"></i> Видалити
									</a>
								</div>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	}
	else
	{
		<div class="alert alert-info">
			<i class="bi bi-info-circle"></i> Лікарів у системі поки немає.
		</div>
	}
</div>
