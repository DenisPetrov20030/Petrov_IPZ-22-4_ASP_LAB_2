@model HospitalSystem.Data.Models.Doctor

<div class="container py-4">
	<div class="card shadow-sm border-danger">
		<div class="card-header bg-danger text-white">
			<h4><i class="bi bi-exclamation-triangle"></i> Видалити лікаря</h4>
		</div>
		<div class="card-body">
			<div class="alert alert-danger">
				<h5>Ви впевнені, що хочете видалити цього лікаря?</h5>
				<p class="mb-0">Ця дія незворотня!</p>
			</div>

			<dl class="row">
				<dt class="col-sm-3">ID:</dt>
				<dd class="col-sm-9">@Model.DoctorID</dd>

				<dt class="col-sm-3">Повне ім'я:</dt>
				<dd class="col-sm-9"><strong>@Model.FullName</strong></dd>

				<dt class="col-sm-3">Спеціалізація:</dt>
				<dd class="col-sm-9">@Model.Specialization</dd>

				<dt class="col-sm-3">Відділення:</dt>
				<dd class="col-sm-9">@Model.Department</dd>

				<dt class="col-sm-3">Телефон:</dt>
				<dd class="col-sm-9">@Model.PhoneNumber</dd>

				<dt class="col-sm-3">Email:</dt>
				<dd class="col-sm-9">@Model.Email</dd>

				<dt class="col-sm-3">Кількість записів:</dt>
				<dd class="col-sm-9">
					<span class="badge bg-info">@Model.Appointments.Count</span>
				</dd>
			</dl>

			@if (Model.Appointments.Any())
			{
				<div class="alert alert-warning">
					<i class="bi bi-exclamation-circle"></i>
					<strong>Увага!</strong> У цього лікаря є @Model.Appointments.Count записів на прийом. 
					Після видалення лікаря, зв'язок з записами буде втрачено (DoctorID стане null).
				</div>
			}

			<form method="post" action="/Doctors/Delete">
				<input type="hidden" name="id" value="@Model.DoctorID" />
				
				<div class="d-flex justify-content-between">
					<button type="submit" class="btn btn-danger">
						<i class="bi bi-trash"></i> Так, видалити
					</button>
					<a href="/Doctors" class="btn btn-outline-secondary">
						<i class="bi bi-x-circle"></i> Ні, скасувати
					</a>
				</div>
			</form>
		</div>
	</div>
</div>
