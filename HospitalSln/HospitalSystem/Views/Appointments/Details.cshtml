@model HospitalSystem.Models.Appointment

<div class="container py-4">
	<div class="card shadow-sm">
		<div class="card-header bg-info text-white">
			<h4><i class="bi bi-info-circle"></i> Деталі запису</h4>
		</div>
		<div class="card-body">
			<dl class="row">
				<dt class="col-sm-4">Пацієнт:</dt>
				<dd class="col-sm-8">@Model.PatientName</dd>

				<dt class="col-sm-4">Лікар:</dt>
				<dd class="col-sm-8">@Model.DoctorName</dd>

				<dt class="col-sm-4">Дата і час:</dt>
				<dd class="col-sm-8">@Model.AppointmentDate.ToString("dd MMM yyyy, HH:mm")</dd>

				<dt class="col-sm-4">Відділення:</dt>
				<dd class="col-sm-8">@Model.Department</dd>

				<dt class="col-sm-4">Примітки:</dt>
				<dd class="col-sm-8">
					@if (string.IsNullOrWhiteSpace(Model.Notes))
					{
						<em class="text-muted">Без приміток</em>
					}
					else
					{
						@Model.Notes
					}
				</dd>
			</dl>
		</div>
		<div class="card-footer text-end">
			<a href="/Appointments" class="btn btn-outline-primary">
				<i class="bi bi-arrow-left"></i> Назад
			</a>
		</div>
	</div>
</div>
