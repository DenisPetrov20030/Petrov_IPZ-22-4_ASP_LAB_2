@model HospitalSystem.Models.Appointment

<div class="container py-4">
	<div class="card shadow-sm">
		<div class="card-header bg-primary text-white">
			<h4><i class="bi bi-plus-circle"></i> Новий запис</h4>
		</div>
		<div class="card-body">
			<form method="post" action="/Appointments/Create">
				<div class="mb-3">
					<label class="form-label">Ім'я пацієнта</label>
					<input type="text" name="PatientName" class="form-control" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Ім'я лікаря</label>
					<input type="text" name="DoctorName" class="form-control" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Дата і час</label>
					<input type="datetime-local" name="AppointmentDate" class="form-control" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Відділення</label>
					<input type="text" name="Department" class="form-control" required>
				</div>

				<div class="mb-3">
					<label class="form-label">Примітки</label>
					<textarea name="Notes" class="form-control" rows="3"></textarea>
				</div>

				<div class="d-flex justify-content-between">
					<button type="submit" class="btn btn-success">
						<i class="bi bi-check-circle"></i> Створити
					</button>
					<a href="/Appointments" class="btn btn-outline-secondary">
						<i class="bi bi-x-circle"></i> Скасувати
					</a>
				</div>
			</form>
		</div>
	</div>
</div>
