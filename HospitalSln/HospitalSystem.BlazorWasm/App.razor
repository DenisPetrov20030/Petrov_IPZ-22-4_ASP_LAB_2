<CascadingAuthenticationState>
	<Router AppAssembly="@typeof(App).Assembly">
		<Found Context="routeData">
			<AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
				<NotAuthorized>
					<div class="container py-5">
						<div class="alert alert-warning" role="alert">
							<h4 class="alert-heading">Доступ заборонено</h4>
							<p>Ви повинні увійти в систему для доступу до цієї сторінки.</p>
							<hr>
							<p class="mb-0">
								<a href="/login" class="btn btn-primary">Увійти</a>
								<a href="/register" class="btn btn-secondary">Зареєструватись</a>
							</p>
						</div>
					</div>
				</NotAuthorized>
			</AuthorizeRouteView>
			<FocusOnNavigate RouteData="@routeData" Selector="h1" />
		</Found>
		<NotFound>
			<PageTitle>Не знайдено</PageTitle>
			<LayoutView Layout="@typeof(MainLayout)">
				<div class="container py-5">
					<div class="alert alert-info" role="alert">
						<h4 class="alert-heading">Сторінку не знайдено</h4>
						<p>Вибачте, за цією адресою нічого немає.</p>
						<hr>
						<p class="mb-0">
							<a href="/" class="btn btn-primary">Повернутися на головну</a>
						</p>
					</div>
				</div>
			</LayoutView>
		</NotFound>
	</Router>
</CascadingAuthenticationState>
